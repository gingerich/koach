  "homepage": "https://github.com/gingerich/koach#readme",
  "dependencies": {
    "bottlejs": "^1.6.1",
    "debug": "^3.0.1",
    "invariant": "^2.2.2",
    "koa": "^2.2.0",
    "koa-compose": "^4.0.0",
